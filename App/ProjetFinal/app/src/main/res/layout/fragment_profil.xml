<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    tools:context="wememe.ca.Activities.Profil"
    xmlns:card_view="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="8"
                    android:weightSum="3">

                        <ImageView
                            android:id="@+id/imgProfilPicture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            app:srcCompat="@drawable/upload_icon" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtPost"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorTexte" />

                                        <TextView
                                            android:id="@+id/textView11"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="post"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorTexte" />

                                        <TextView
                                            android:id="@+id/txtLaughtsPost"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.03"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorTexte" />

                                        <TextView
                                            android:id="@+id/textView2"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:text="laughts/post"
                                            android:textColor="@color/colorTexte" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtfollowers"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorTexte" />

                                        <TextView
                                            android:id="@+id/textView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="followers"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorTexte" />

                                        <TextView
                                            android:id="@+id/txtfollowings"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorTexte" />

                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="followings"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorTexte" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="TextView"
                                            android:textColor="@color/colorTexte" />

                                        <Button
                                            android:id="@+id/btnFollow"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@android:color/white"
                                            android:text="Follow" />

                                </LinearLayout>

                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2">


                    <android.support.v4.widget.SwipeRefreshLayout
                            android:id="@+id/swipe_refresh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/btnBack"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_viewProfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        </android.support.v4.widget.SwipeRefreshLayout>

                </LinearLayout>
        </LinearLayout>

</FrameLayout>