<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wememe.ca.Activities.Inscription"
    android:background="@drawable/connexion_background">

    <Button
        android:id="@+id/btnInscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="Ins"
        android:text="Inscription"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldDateInscription"
        app:layout_constraintVertical_bias="0.228" />

    <EditText
        android:id="@+id/fieldEmailInscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:drawableLeft="@drawable/inscription_email_no_focus"
        android:ems="10"
        android:hint="Adresse courriel"
        android:inputType="textEmailAddress"
        android:text="supriseleach@gmail.com"
        android:textColor="@android:color/white"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/imgInscription"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/fieldUsernameInscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:drawableLeft="@drawable/inscription_username_no_focus"
        android:ems="10"
        android:hint="Nom de memeur"
        android:inputType="textPersonName"
        android:text="Justin"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/fieldEmailInscription"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/fieldVerifierMDPInscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:drawableLeft="@drawable/connexion_lock_no_focus"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:text="q"
        android:textColor="@android:color/white"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/fieldMDPInscription"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/fieldMDPInscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:drawableLeft="@drawable/connexion_lock_no_focus"
        android:ems="10"
        android:hint="Confirmer mot de passe"
        android:inputType="textPassword"
        android:text="q"
        android:textColor="@android:color/white"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/fieldUsernameInscription"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/fieldDateInscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:drawableLeft="@drawable/inscription_date_no_focus"
        android:ems="10"
        android:hint="Date naissance"
        android:inputType="datetime"
        android:text="01-01-1998"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fieldVerifierMDPInscription" />

    <ImageButton
        android:id="@+id/imgInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
